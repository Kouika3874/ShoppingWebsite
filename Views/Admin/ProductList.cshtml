@model IEnumerable<Project14.Models.table_Product>
@{
    ViewBag.Title = "商品清單";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mt-4">📦 商品清單</h2>
<p>
    <a class="btn btn-success mb-3" href="@Url.Action("CreateProduct", "Admin")">
        <i class="bi bi-plus-circle"></i> 新增商品
    </a>
</p>
<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>商品名稱</th>
            <th>價格</th>
            <th>圖片</th>
            <th>分類</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>$@item.Price</td>
                <td>
                    <img src="@Url.Content("~/Content/image/" + item.Image)" alt="@item.Name" style="width: 80px; height: auto;" />
                </td>
                <td>@item.table_Category?.Name</td>
                <td>
                    <a href="@Url.Action("EditProduct", "Admin", new { id = item.Id })" class="btn btn-sm btn-primary">編輯</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除嗎？');">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
