@model IEnumerable<Project14.Models.table_Order>
@{
    ViewBag.Title = "訂單管理";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mt-4">📑 訂單管理</h2>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>訂單編號</th>
            <th>會員帳號</th>
            <th>收件人</th>
            <th>Email</th>
            <th>地址</th>
            <th>日期</th>
            <th>狀態</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderGuid</td>
                <td>@order.UserId</td>
                <td>@order.Receiver</td>
                <td>@order.Email</td>
                <td>@order.Address</td>
                <td>@order.Date?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(order.IsConfirmed ? "✅ 已確認" : "❌ 未確認")</td>
            </tr>
        }
    </tbody>
</table>
